<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MemoryLane"
             x:Class="MemoryLane.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="AppBackgroundColor">#F8F9FB</Color>
            <Color x:Key="SideBarColor">#2A2D43</Color>
            <Color x:Key="SideBarColorHover">#1A1D2F</Color>
            <Color x:Key="AppTextColor">#E7E5EB</Color>
            <Color x:Key="SidebarTextColor">#212121</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
